<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:minHeight="72dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="356dp"
            android:background="@color/foreground"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_gravity="top"
            android:elevation="4dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/icon"
                android:src="@drawable/ic_chevron_right_black_32dp"
                android:tint="@color/primaryTextLight"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:scaleType="center"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:text="tru"
                android:id="@+id/tv_message"
                android:textSize="38sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/primaryTextLight"
                android:gravity="center"
                android:background="@color/tile_red"
                android:padding="16dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:text="tru"
                android:id="@+id/tv_tru"
                android:gravity="center"
                android:textSize="45sp"
                android:textColor="@color/grey_white_1000"
                android:visibility="invisible"
                android:background="@color/light_green_400"
                android:minHeight="72dp"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="false" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/tv_message"
                android:layout_alignParentEnd="true"
                android:background="@color/foreground"
                android:gravity="center_vertical|right"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:clipToPadding="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_author"
                    android:layout_weight="1"
                    android:layout_marginRight="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tru"
                    android:id="@+id/tv_response"
                    android:visibility="visible"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>