<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.andrewthewizard.tru.android.SendingActivity"
    android:background="@color/accent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:hint="speak the truth"
                android:textColor="@color/grey_white_1000"
                app:met_baseColor="@color/grey_white_1000"
                app:met_primaryColor="@color/grey_white_1000"
                android:layout_marginRight="16dp"
                android:layout_marginTop="?attr/actionBarSize"
                android:textSize="24sp"
                android:maxLines="10"
                app:met_maxCharacters="90"
                android:singleLine="true" />

        </RelativeLayout>



    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="72dp"
        android:paddingRight="32dp"
        android:paddingBottom="32dp"
        android:paddingTop="8dp">



        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton"
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/ic_send_black_24dp"
            android:tint="@color/grey_white_1000"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:onClick="onClick" />

    </RelativeLayout>




</LinearLayout>
