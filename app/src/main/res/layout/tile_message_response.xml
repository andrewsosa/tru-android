<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView"
            android:src="@drawable/ic_subdirectory_arrow_right_black_24dp"
            android:tint="@color/primaryTextDark"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:scaleType="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="tru"
            android:id="@+id/tv_tru"
            android:gravity="center"
            android:textSize="32sp"
            android:textColor="@color/grey_white_1000"
            android:visibility="gone"
            android:background="@color/light_green_400" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="72dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tv_message"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif"
                android:textColor="@color/primaryTextDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="naw man"
                android:id="@+id/tv_response"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>