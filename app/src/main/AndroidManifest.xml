<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andrewthewizard.tru.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.andrewthewizard.tru.android.Tru"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">
        <activity android:name="com.andrewthewizard.tru.android.TruActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.andrewthewizard.tru.android.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.MainActivity" />
        <activity android:name="com.andrewthewizard.tru.android.SendingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Sending"/>
        <activity android:name="com.andrewthewizard.tru.android.AuthActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Auth"/>
    </application>

</manifest>
